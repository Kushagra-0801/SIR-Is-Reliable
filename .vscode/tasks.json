{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug build",
            "type": "shell",
            "command": "g++",
            "dependsOn": [
                "Create target"
            ],
            "args": [
                "-std=c++17",
                "-Wall",
                "-Werror",
                "-Wpedantic",
                "-Wextra",
                "-Iincludes",
                "src/*",
                "-o",
                "target/sir"
            ],
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "focus": true,
                "clear": true
            }
        },
        {
            "label": "Create target",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "target"
            ]
        }
    ]
}